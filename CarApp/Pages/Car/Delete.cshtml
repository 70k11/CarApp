@page
@model CarApp.Pages.Car.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Delete Confirmation</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-text">Are you sure that you want to delete this?</h5>
                    <dl class="row mt-4">
                        <dt class="col-sm-4 text-end fw-bold">
                           Brand
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Cars.CarManufacturer)
                        </dd>

                        <dt class="col-sm-4 text-end fw-bold">
                            Model
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Cars.CarModel)
                        </dd>

                        <dt class="col-sm-4 text-end fw-bold">
                            Year
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Cars.CarYom)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-outline-secondary">Back</a>
                    <form method="post">
                        <input type="hidden" asp-for="Cars.CarId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
